<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    
    <i class="fa-solid fa-user-secret fa-8x"></i>
    <h1 class="display-3">My Secrets Page!</h1>
    <br>
    <p>User <b><%= user.username %> </b> is successfully authenticated!</p>
    <br>
    <ul class="list-group">
    <%  if(secrets) {
            secrets.forEach( function(secret) { %>
              <li class="list-group-item bg-info text-white"><%=secret.secret %></li>                  
        <% }        
        )}; 
    %>
    </ul>
    <hr>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <form action="/logout" method="POST">
            <button name="btn_logout" value="" class="btn btn-light btn-lg">Log Out</button>
          </form>
        </div>
        <div class="col-sm">
           <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
        </div>
      </div>
    </div>
    
  </div>
</div>

<%- include('partials/footer') %>



